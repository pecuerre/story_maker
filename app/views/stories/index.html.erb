<p style="color: green"><%= notice %></p>
<% content_for :title, "Stories" %>
<%= header "Stories", icon: :list %>

<div class="mb-3">
  <%= link_to "New story", new_story_path, class: 'btn btn-primary' %>
</div>

<div id="stories" class="row">
  <% @stories.each do |story| %>
    <div class="col-md-3 mb-4">
      <div class="card h-100 <%= highlighted_border(story) %>">
        <div class="card-header">
          <%= story.name %>
        </div>
        <div class="card-body">
          <h5 class="card-title"><%= story.slug %></h5>
          <p class="card-text"><%= story.description %></p>
          <p class="card-text"> Locations: <%= story.locations.count %></p>
          <%= link_to "Details", story, class: 'btn btn-info' %>
          <%= link_to "Edit", edit_story_path(story), class: 'btn btn-primary' %>
        </div>
      </div>
    </div>
  <% end %>
</div>

