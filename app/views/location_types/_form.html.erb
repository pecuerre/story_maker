<%= form_with(model: [@story, location_type]) do |form| %>
  <% if location_type.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(location_type.errors.count, "error") %> prohibited this location_type from being saved:</h2>

      <ul>
        <% location_type.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, class: 'form-label' %>
    <%= form.text_field :name, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.label :description, class: 'form-label' %>
    <%= form.textarea :description, class: 'form-control' %>
  </div>

  <div class="mb-3">
    <%= form.hidden_field :story_id, value: @story.id %>
    <%= form.submit class: 'btn btn-primary' %>
    <%= link_to "Back to Location Types", story_location_types_path(@story), class: 'btn btn-secondary' %>
  </div>
<% end %>
