<% content_for :title, "Location Form" %>

<p class="space"></p>

<div class="row justify-content-center">
  <div class="col-md-8">
    <div class="card">
      <div class="card-header bg-info">
        <h5 class="card-title mb-0">Location Information</h5>
      </div>
      <div class="card-body">
        <%= form_with model: [@story, @location], local: true do |form| %>
          <% if @location.errors.any? %>
            <div class="alert alert-danger">
              <h6><%= pluralize(@location.errors.count, "error") %> prohibited this location from being saved:</h6>
              <ul class="mb-0">
                <% @location.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <div class="mb-3">
            <%= form.label :name, class: 'form-label' %>
            <%= form.text_field :name, class: 'form-control' %>
            <div class="form-text">The display name for this location</div>
          </div>

          <div class="mb-3">
            <%= form.label :parent_id, class: 'form-label' %>
            <%= form.select :parent_id, @parent_locations, {}, class: 'form-select' %>
            <div class="form-text">Each location can be part or a subdivision of a larger location</div>
          </div>

          <div class="mb-3">
            <%= form.label :location_type_taxon_id, class: 'form-label' %>
            <%= form.select :location_type_taxon_id, @location_type_taxons, {}, class: 'form-select' %>
            <div class="form-text">The type of location (forrest, lake, city, etc.)</div>
          </div>

          <div class="mb-3">
            <%= form.label :description, class: "form-label" %>
            <%= form.text_area :description, class: "form-control", rows: 3 %>
            <div class="form-text">Optional description of this location's purpose</div>
          </div>

          <div class="d-flex justify-content-between">
            <%= form.hidden_field :story_id, value: @story.id %>
            <% if @location.new_record? %>
              <%= link_to "Cancel", story_locations_path(@story), class: "btn btn-secondary" %>
              <%= form.submit("Create Location", class: "btn btn-primary") %>
            <% else %>
              <%= link_to "Cancel", story_locations_path(@story), class: "btn btn-secondary" %>
              <%= form.submit("Update Location", class: "btn btn-primary") %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

