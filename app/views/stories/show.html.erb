<p style="color: green"><%= notice %></p>
<%= header "Story Details", icon: :details %>

<div id="<%= dom_id story %>">
  <p>
    <strong>Name:</strong>
    <%= story.name %>
  </p>

  <p>
    <strong>Slug:</strong>
    <%= story.slug %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= story.description %>
  </p>

</div>

<div class="mt-3">
  <%= link_to "Edit this story", edit_story_path(@story), class: 'btn btn-primary' %>
  <%= link_to "Back to stories", stories_path, class: 'btn btn-secondary' %>
  <%= button_to "Destroy this story", @story, class: 'btn btn-danger', method: :delete, form: { class: "d-inline" } %>
</div>
