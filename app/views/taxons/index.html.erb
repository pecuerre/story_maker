<% content_for :title, "#{@taxonomy.name} - Taxons" %>

<div class="d-flex justify-content-between align-items-center mb-4">
  <div>
    <nav aria-label="breadcrumb">
      <ol class="breadcrumb">
        <li class="breadcrumb-item"><%= link_to @story.name, story_path(@story) %></li>
        <li class="breadcrumb-item"><%= link_to "Taxonomies", story_taxonomies_path(@story) %></li>
        <li class="breadcrumb-item"><%= link_to @taxonomy.name, story_taxonomy_path(@story, @taxonomy) %></li>
        <li class="breadcrumb-item active" aria-current="page">Taxons</li>
      </ol>
    </nav>
    <h1 class="mb-0">
      <%= @taxonomy.name %> - Taxons
      <% if @taxonomy.fixed? %>
        <span class="badge bg-warning text-dark ms-2">Fixed</span>
      <% end %>
    </h1>
  </div>
  <div class="btn-group" role="group">
    <%= link_to story_taxonomy_path(@story, @taxonomy), class: "btn btn-outline-secondary" do %>
      <i class="bi bi-eye"></i> View Tree
    <% end %>
    <%= link_to new_story_taxonomy_taxon_path(@story, @taxonomy), class: "btn btn-primary" do %>
      <i class="bi bi-plus-circle"></i> Add Taxon
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header">
        <h5 class="card-title mb-0">Taxon Tree</h5>
      </div>
      <div class="card-body">
        <div id="taxon-tree-container">
          <% if @taxons.any? %>
            <div class="taxon-tree">
              <% @taxons.each do |taxon| %>
                <%= render 'taxon_node', taxon: taxon %>
              <% end %>
            </div>
          <% else %>
            <p class="text-muted">No taxons found. Create the first taxon to get started.</p>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
